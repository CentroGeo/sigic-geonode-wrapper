<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>mx.sigic</groupId>
  <artifactId>gs-wps-download-excel</artifactId>
  <version>1.0.0</version>
  <name>GeoServer WPS Download Excel (XLS/XLSX)</name>

  <properties>
    <geoserver.version>2.24.4</geoserver.version>
    <geotools.version>30.4</geotools.version> <!-- si no resuelve, prueba 30.3 o 30.5 -->
    <java.version>11</java.version>
  </properties>

  <dependencies>
    <!-- GeoServer (los tendrÃ¡s instalados en tu ~/.m2 con install:install-file) -->
    <dependency>
      <groupId>org.geoserver</groupId>
      <artifactId>gs-main</artifactId>
      <version>${geoserver.version}</version>
      <scope>provided</scope>
      <systemPath>${project.basedir}/lib/gs-main-2.24.4.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>org.geoserver</groupId>
      <artifactId>gs-wps-core</artifactId>
      <version>${geoserver.version}</version>
      <scope>provided</scope>
      <systemPath>${project.basedir}/lib/gs-wps-core-2.24.4.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>org.geoserver</groupId>
      <artifactId>gs-wps-download</artifactId>
      <version>${geoserver.version}</version>
      <scope>provided</scope>
      <systemPath>${project.basedir}/lib/gs-wps-download-2.24.4.jar</systemPath>
    </dependency>

    <!-- GeoTools APIs (para SimpleFeature*, ProgressListener, etc.) -->
    <dependency>
      <groupId>org.geotools</groupId>
      <artifactId>gt-api</artifactId>
      <version>30.4</version>
      <scope>provided</scope>
      <systemPath>${project.basedir}/lib/gt-api-30.4.jar</systemPath>
    </dependency>

    <dependency>
      <groupId>org.geotools</groupId>
      <artifactId>gt-main</artifactId>
      <version>30.4</version>
      <scope>provided</scope>
      <systemPath>${project.basedir}/lib/gt-main-30.4.jar</systemPath>
    </dependency>

    <dependency>
      <groupId>org.opengis</groupId>
      <artifactId>geoapi</artifactId>
      <version>3.0.2</version>
      <scope>provided</scope>
    </dependency>

    <!-- Excel -->
    <dependency>
      <groupId>org.apache.poi</groupId>
      <artifactId>poi</artifactId>
      <version>5.2.3</version>
    </dependency>
    <dependency>
      <groupId>org.apache.poi</groupId>
      <artifactId>poi-ooxml</artifactId>
      <version>5.2.3</version>
    </dependency>

    <!-- JTS (WKT) -->
    <dependency>
      <groupId>org.locationtech.jts</groupId>
      <artifactId>jts-core</artifactId>
      <version>1.19.0</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.11.0</version>
        <configuration>
          <release>${java.version}</release>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <!-- Repos de OSGeo/GeoTools SOLO para compilar (runtime ya lo aporta GeoServer) -->
  <repositories>
    <repository>
      <id>geotools-releases</id>
      <url>https://repo.osgeo.org/repository/geotools-releases/</url>
    </repository>
    <repository>
      <id>osgeo-public</id>
      <url>https://repo.osgeo.org/repository/public/</url>
    </repository>
    <repository>
      <id>geoserver-releases</id>
      <url>https://repo.osgeo.org/repository/geoserver-releases/</url>
    </repository>
  </repositories>
</project>
